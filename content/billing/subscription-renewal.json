{
  "id": "subscription-renewal",
  "category": "billing",
  "campaignName": "subscription_renewal",
  "layout": "simple",
  "dynamicFields": [
    "firstName",
    "planName",
    "renewalDate",
    "amount",
    "invoiceUrl",
    "manageUrl"
  ],
  "translations": {
    "en": {
      "subject": "Your Purra Subscription Has Been Renewed",
      "preheader": "{{ planName }} renewed successfully for ${{ amount }}",
      "header": {
        "title": "Subscription Renewed",
        "subtitle": "Thank you for continuing with Purra"
      },
      "body": {
        "greeting": "Hi {{ firstName }},",
        "intro": "Your **{{ planName }}** subscription has been successfully renewed. Your access to all premium features will continue uninterrupted.",
        "renewalDetails": {
          "title": "Renewal Details",
          "plan": "Plan: {{ planName }}",
          "amount": "Amount: ${{ amount }}",
          "renewalDate": "Renewal Date: {{ renewalDate }}",
          "nextBilling": "Next billing date: {{ renewalDate }}"
        },
        "whatsIncluded": {
          "title": "What's Included",
          "items": [
            "Unlimited vendor due diligence reports",
            "Real-time price monitoring and alerts",
            "Advanced analytics and insights",
            "Priority support",
            "API access and integrations"
          ]
        },
        "footer": "Your invoice is attached. You can also download it anytime from your account."
      },
      "cta": {
        "primary": {
          "text": "Download Invoice",
          "url": "{{ invoiceUrl }}"
        },
        "secondary": {
          "text": "Manage Subscription",
          "url": "{{ manageUrl }}"
        }
      }
    },
    "he": {
      "subject": "המנוי שלכם ל-Purra חודש",
      "preheader": "{{ planName }} חודש בהצלחה תמורת ${{ amount }}",
      "header": {
        "title": "המנוי חודש",
        "subtitle": "תודה שממשיכים עם Purra"
      },
      "body": {
        "greeting": "שלום {{ firstName }},",
        "intro": "המנוי שלכם ל-**{{ planName }}** חודש בהצלחה. הגישה שלכם לכל התכונות הפרימיום תימשך ללא הפרעה.",
        "renewalDetails": {
          "title": "פרטי חידוש",
          "plan": "תוכנית: {{ planName }}",
          "amount": "סכום: ${{ amount }}",
          "renewalDate": "תאריך חידוש: {{ renewalDate }}",
          "nextBilling": "תאריך חיוב הבא: {{ renewalDate }}"
        },
        "whatsIncluded": {
          "title": "מה כלול",
          "items": [
            "דוחות בדיקת נאותות ספקים ללא הגבלה",
            "ניטור מחירים והתראות בזמן אמת",
            "אנליטיקה ותובנות מתקדמות",
            "תמיכה עדיפה",
            "גישה ל-API ואינטגרציות"
          ]
        },
        "footer": "החשבונית שלכם מצורפת. אתם יכולים גם להוריד אותה בכל עת מהחשבון שלכם."
      },
      "cta": {
        "primary": {
          "text": "הורידו חשבונית",
          "url": "{{ invoiceUrl }}"
        },
        "secondary": {
          "text": "נהלו מנוי",
          "url": "{{ manageUrl }}"
        }
      }
    },
    "hi": {
      "subject": "आपकी Purra सदस्यता नवीनीकृत हो गई है",
      "preheader": "{{ planName }} ${{ amount }} के लिए सफलतापूर्वक नवीनीकृत",
      "header": {
        "title": "सदस्यता नवीनीकृत",
        "subtitle": "Purra के साथ जारी रखने के लिए धन्यवाद"
      },
      "body": {
        "greeting": "नमस्ते {{ firstName }},",
        "intro": "आपकी **{{ planName }}** सदस्यता सफलतापूर्वक नवीनीकृत कर दी गई है। सभी प्रीमियम सुविधाओं तक आपकी पहुंच बिना किसी रुकावट के जारी रहेगी।",
        "renewalDetails": {
          "title": "नवीनीकरण विवरण",
          "plan": "योजना: {{ planName }}",
          "amount": "राशि: ${{ amount }}",
          "renewalDate": "नवीनीकरण तिथि: {{ renewalDate }}",
          "nextBilling": "अगली बिलिंग तिथि: {{ renewalDate }}"
