        "footer": "您的发票已附上。您也可以随时从您的帐户下载。"
      },
      "cta": {
        "primary": {
          "text": "下载发票",
          "url": "{{ invoiceUrl }}"
        },
        "secondary": {
          "text": "管理订阅",
          "url": "{{ manageUrl }}"
        }
      }
