            "उन्नत विश्लेषण और अंतर्दृष्टि",
            "प्राथमिकता सहायता",
            "API पहुंच और एकीकरण"
          ]
        },
        "footer": "आपका चालान संलग्न है। आप इसे अपने खाते से किसी भी समय डाउनलोड भी कर सकते हैं।"
      },
      "cta": {
        "primary": {
          "text": "चालान डाउनलोड करें",
          "url": "{{ invoiceUrl }}"
        },
        "secondary": {
          "text": "सदस्यता प्रबंधित करें",
          "url": "{{ manageUrl }}"
        }
      }
    },
    "fr": {
      "subject": "Votre abonnement Purra a été renouvelé",
      "preheader": "{{ planName }} renouvelé avec succès pour ${{ amount }}",
      "header": {
        "title": "Abonnement renouvelé",
        "subtitle": "Merci de continuer avec Purra"
      },
      "body": {
        "greeting": "Bonjour {{ firstName }},",
        "intro": "Votre abonnement **{{ planName }}** a été renouvelé avec succès. Votre accès à toutes les fonctionnalités premium se poursuivra sans interruption.",
        "renewalDetails": {
          "title": "Détails du renouvellement",
          "plan": "Plan : {{ planName }}",
          "amount": "Montant : ${{ amount }}",
